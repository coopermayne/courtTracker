<h5><%= @case.title %></h5>

<div>
<h2>Hearings</h2>


  <% unless @case.hearings.empty? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Case</th>
        <th>Location</th>
      </tr>
    </thead>

    <tbody>
      <% @case.hearings.sort_by(&:time).each do |hearing| %>
        <tr>
          <td><%= hearing.time.strftime("%b %d, %Y at %I:%M%p") %></td>
          <td><%= hearing.case.title %></td>
          <td><%= hearing.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% else %>
    <p>No Hearings</p>
  <% end %>


</div>
<div>

<div>
<h2>Documents</h2>

  <% unless @case.documents.empty? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Filed By</th>
      </tr>
    </thead>

    <tbody>
      <% @case.documents.sort_by(&:date).reverse.each do |doc| %>
        <tr>
          <td style="width:150px"><%= doc.date.strftime("%b %d, %Y") if doc.date %></td>
          <td><%= doc.title %></td>
          <td><%= doc.filed_by %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% else %>
    <p>No Documents</p>
  <% end %>

  <hr>

</div>

