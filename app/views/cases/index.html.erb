<p id="notice"><%= notice %></p>

<h1>Cases</h1>

<table class="table">
  <thead>
    <tr>
      <th>Uid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |kase| %>
      <tr>
        <td><%= kase.uid %></td>
        <td><%= link_to 'Show', kase%></td>
        <td><%= link_to 'Edit', edit_case_path(kase) %></td>
        <td><%= link_to 'Destroy',kase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn"><%= link_to 'New Case', new_case_path %></button>

<h1>Hearings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hearings.sort_by(&:time).each do |hearing| %>
      <tr>
        <td><%= hearing.time.strftime("%b %d, %Y at %I:%M%p") %></td>
        <td><%= hearing.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Case</th>
      <th>Title</th>
      <th>Filed By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.sort_by(&:date).reverse.each do |doc| %>
      <tr>
        <td style="width:150px"><%= doc.date.strftime("%b %d, %Y") if doc.date %></td>
        <td><%= doc.case.uid %></td>
        <td><%= doc.title %></td>
        <td><%= doc.filed_by %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <hr>
