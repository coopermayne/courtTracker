<p id="notice"><%= notice %></p>

<h1>Cases</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |kase| %>
      <tr>
        <td><%= kase.uid %></td>
        <td><%= link_to 'Show', kase%></td>
        <td><%= link_to 'Edit', edit_case_path(kase) %></td>
        <td><%= link_to 'Destroy',kase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Case', new_case_path %>

<br>

<h1>Hearings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hearings.sort_by(&:time).each do |hearing| %>
      <tr>
        <td><%= hearing.time.strftime("%b %d, %Y at %I:%M%p") %></td>
        <td><%= hearing.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Documents</h1>

<% @cases.each do |kase| %>
  <h3><%= kase.uid %></h3>


  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Filed By</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% kase.documents.sort_by(&:date).reverse.each do |doc| %>
        <tr>
          <td><%= doc.date.strftime("%b %d, %Y") if doc.date %></td>
          <td><%= doc.title %></td>
          <td><%= doc.filed_by %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>
<% end %>
