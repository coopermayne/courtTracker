<% if resource && !resource.errors.empty? %>
  <div class="notification is-danger slide-in">
    <button class="delete"></button>
    <%= resource.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe %>
  </div>
<% end %>

<section class="section devise">
<div class="container">

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>

    <div class="field">
      <p class="control has-icons-left has-icons-right">
      <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Email "%>
      <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fa fa-check"></i>
      </span>
      </p>
    </div>

    <div class="field">
      <p class="control">
      <%= f.submit "Resend confirmation instructions", class: "button is-success" %>
      </p>
    </div>

  <% end %>

  <br />
  <%= render "devise/shared/links" %>
</div>
</section>
