<section class="section devise">
<div class="container">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <p class="control has-icons-left has-icons-right">
    <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Email "%>
    <span class="icon is-small is-left">
      <i class="fa fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fa fa-check"></i>
    </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
    <%= f.password_field :password, autocomplete: "off", class:"input", placeholder:"Password" %>
    <span class="icon is-small is-left">
      <i class="fa fa-lock"></i>
    </span>
    </p>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="field">
    <p class="control">
    <%= f.submit "Log in", class: "button is-success" %>
    </p>
  </div>

<% end %>
<br />
<%= render "devise/shared/links" %>


</div>
</section>
